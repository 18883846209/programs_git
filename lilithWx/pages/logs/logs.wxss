/* pages/logs/logs.wxss */
.userpage {
  width: 100%;
   height: 1150rpx; 
  background-color: #282142;
  color: white;
  font-family: -apple-system, "SF Pro SC", "HanHei SC", "SF Pro Text", "Myriad Set Pro", "SF Pro Icons", "Apple Legacy Chevron", "PingFang SC", "Helvetica Neue", "Helvetica", "Arial", sans-serif;  
}
.user {
  width: 100%;
  height: 310rpx;
  background-color: rgba(76,44,75, 0.1);
  background:linear-gradient(to bottom, #413e75, #4c2c4b);
  padding-top: 72rpx;
  margin-bottom: 28rpx;
}

.userhead {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border: 1rpx solid white;
  border-radius: 50%;
}
.username {
  text-align: center;
  margin: 20rpx auto 0;
  font-family: -apple-system, "SF Pro SC", "HanHei SC", "SF Pro Text", "Myriad Set Pro", "SF Pro Icons", "Apple Legacy Chevron", "PingFang SC", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
}
.userinfo {
  width: 100%;
  height: 692rpx;
  background-color: #2f2a40;
  box-shadow: 0 2px 20px 0 rgba(0, 0, 0, 0.2);
}
.userzl {
  height: calc((712rpx / 6) - 6rpx);
  display: flex;
  align-items: center;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  padding-left: 40rpx;
  font-size: 32rpx;
}
.userinput {
  width: 490rpx;
  margin-left: 140rpx;
  display: flex;
  align-items: center;
  font-family: -apple-system, "SF Pro SC", "HanHei SC", "SF Pro Text", "Myriad Set Pro", "SF Pro Icons", "Apple Legacy Chevron", "PingFang SC", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
}

.tip {
  margin: 9rpx auto;
  text-align: center;
  font-size: 24rpx;
  opacity: 0.5;
}
.userinfo image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.birthxb {
  margin-right: 140rpx;
}
.birthdate, .birthtime {
  margin-right: 75rpx;
}
.birthplace {
  margin-right: 28px;
  width: 70px
}

.save {
  position: fixed;
  right: 28rpx;
  top: 28rpx;
  font-size: 40rpx;
}

.section {
  padding-top: 20rpx;
}
.citypickers{
  position: fixed;
  bottom: 0;
  height: 100%;
  width: 100%;
  min-height: 100%;
  /* background-color: red; */
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9999;
}
.citypicker{
  
}
.citybody {
  position: absolute;
  bottom: 0;
  z-index: 99999;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255,1); 
}
.citybody picker-view-column {
  color: black;
}
.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 99999
}
.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}
.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E;
  z-index: 9999
}
.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
  z-index: 9999
}

.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 10001
}
.mask1 {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 10001
}

 .banner {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  z-index: 999;
  display: flex;
}
.banner .xzbtn, .banner .mebtn {
  margin-top: 3rpx;
  width: 50%;
  color: rgba(255, 255, 255, 0.6);
  background-color: rgba(49, 41, 77, 1);
  font-size: 25rpx;
  text-align: center
}
.banner image {
  width: 56rpx;
  height: 56rpx;
}
.xzbtn {
  border-right: 1rpx solid rgba(255, 255, 255, 0.5);  
}
.metext {
  color: #de5deb
} 


