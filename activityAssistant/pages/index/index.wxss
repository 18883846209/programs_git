/**index.wxss**/
/*下拉选择框  */
page {
  min-height: 100%;
  background-color: #f6f6f6;
}
#get {
	margin-top: 40px;
}
.indexcontent {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
  background: #f6f6f6;
}
.statelist {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f6f6f6;
  font-size: 34rpx;
  overflow: hidden;
}
.choose {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 999;
  background-color: #f6f6f6;
}
.selectarea {
  position: absolute; 
  left: calc(50% - 130rpx);
  width: 260rpx;
  top: 20rpx;
  height: 300rpx;
  text-align: center;
  margin: 70rpx auto 0;
  border-radius: 16rpx;
  background-color: #fff;
  font-size: 34rpx;
  z-index: 90000001;
}
.selectarea:before {
  content: '';
  width: 0;
  height: 0;
  border-width: 0 10rpx 10rpx 10rpx;
  border-style: dashed;
  border-color: transparent transparent #fff transparent;
  position: absolute;
  top: -10rpx;
  left: 120rpx;
	}
.selectarea:after {
  content: '';
  width: 0;
  height: 0;
  border-width: 10rpx 10rpx 0 10rpx;
  border-style: dashed;
  border-color: transparent transparent #fff transparent;
  position: absolute;
  top: -10rpx;
  left: 120rpx;
}
.moreicon {
  position: absolute;
  top: 24rpx;
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}
.list-item {
  position: relative;
  height: 100rpx;
  border-bottom: 1rpx solid #eaeaea;
  line-height: 100rpx;
}
.list-item:last-of-type {
  border-bottom: none; 
  border-bottom-right-radius: 16rpx;
  border-bottom-left-radius: 16rpx; 
}
.list-item:first-of-type {
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;      
}
.choosedicon {
  position: absolute; 
  top: 36rpx;
  right: 26rpx;
  width: 30rpx;
  height: 20rpx;
}
.selectmask {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9000000;
}
/*活动内容  */
.activitylist {
  position: relative; 
  width: 690rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 34rpx auto;
  padding-bottom: 50rpx;
  color: #333;
  box-shadow: 0 4rpx 20rpx 0 rgba(100, 100, 100, 0.1);  
}
.activitytype {
  display: inline-block;
  height: 25rpx;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;  
  padding: 8rpx 30rpx 6rpx;
  text-align: center;
  line-height: 25rpx;
  color: #fff;
  background-color: #ffc42f;
  margin-top: 38rpx;
  font-size: 26rpx;
}
.activityphoto {
  position: absolute;
  /* display: inline-block; */
  width: 120rpx;
  height: 120rpx;
  right: 40rpx;
  top: -14rpx;
}
.activitypic {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #fff;
  border-radius: 10rpx;
  box-sizing: content-box;
  background-repeat: no-repeat;
  background-size: contain;
}
.crownicon {
  position: absolute;
  width: 40rpx;
  height: 30rpx;
  left: 40rpx;
  top: -15rpx;
}
.activityusername {
  display: block;
  text-align: center;
  margin-top: 14rpx;
  font-size: 26rpx;
}
.activitytime {
  margin-top: 44rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
}
.activityname, .tip {
  margin: 24rpx 30rpx 0;  
  font-size: 34rpx;
  color: #000000;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.activityname {
  font-weight: bold;
}
.activityaddr {
  margin: 24rpx 30rpx 0;  
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;  
  overflow: hidden;  
  text-overflow: ellipsis;  
  display: -webkit-box;  
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical; 
}
.addrtext {
  color: #000000;
}
.spend {
  margin: 24rpx 30rpx 0;
  font-size: 30rpx;
  color: #000000;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.tip {
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.headlist {
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.headlist image {
  border: 4rpx solid #fff;
}
.item {
  width: 70rpx;
  height: 70rpx;
  margin-right: -20rpx;
}
.item image, .item1 image {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
}
.item1 {
  width: 81rpx;
  height: 81rpx;
  margin-right: 20rpx;
}
.more {
  position: absolute;
  top: 10rpx;
  right: 130rpx;
}
.count {
  position: absolute;
  right: 40rpx;
  font-size: 30rpx;  
}
 .publish {
  position: fixed; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 30rpx;
  width: 110rpx;
  height: 110rpx;
  bottom:120rpx;
