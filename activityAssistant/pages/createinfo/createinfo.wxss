/* pages/createinfo/createinfo.wxss */
page {
  min-height: 100%;
  background-color: #f6f6f6
}
.content {
  background-color: #f6f6f6;
  padding-bottom: 320rpx;
  padding-top: 42rpx;
}
.activitydetail {
  position: relative;
  width: 100%;
  background-color: #fff;
  margin: 21rpx auto 0;
  padding-bottom: 108rpx;  
  color: #333;
}
.accontent {
  margin: 0 30rpx;
}
.activitytype {
  display: inline-block;
  /* width: 150rpx; */
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;  
  padding: 8rpx 30rpx 6rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
  background-color: #ffc42f;
  margin-top: 38rpx;
  font-size: 26rpx;
}
.activityphoto {
  position: absolute;
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  right: 40rpx;
  top: -14rpx;
}
.activitypic {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background-image: url('http://iph.href.lu/60x60');
  background-repeat: no-repeat;
  background-size: contain;
}
.crownicon {
  position: absolute;
  width: 40rpx;
  height: 30rpx;
  left: 40rpx;
  top: -15rpx;
}
.activityusername {
  /* width: 120rpx; */
  display: block;
  text-align: center;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.activitytime {
  margin-top: 38rpx;
  /* margin-left: 30rpx; */
  font-size: 30rpx;
}
.activityname {
  margin-top: 24rpx;
  /* margin-left: 30rpx; */
  font-size: 34rpx;
  color: #000000;
  text-overflow: -o-ellipsis-lastline;  
  overflow: hidden;  
  text-overflow: ellipsis;  
  display: -webkit-box;  
  -webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;    
}
.activityaddr {
  margin-top: 24rpx;
  /* margin-left: 30rpx; */
  font-size: 30rpx;
}
.addrtext {
  color: #000000;
}
.spend {
  margin-top: 24rpx;
  /* margin-left: 30rpx; */
  font-size: 30rpx;
  color: #000000;
}
.tip {
  margin-top: 24rpx;
  /* margin-left: 30rpx; */
  font-size: 30rpx;
  color: #000000;
}
.line {
  width: 100%;
  height: 1rpx;
  margin-top: 40rpx;
  background-color: #eaeaea;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5) ;  
}
.sign {
  margin-top: 41.2rpx;
  color: #333;
}
.bm {
  font-size: 30rpx;
}
.sharetip {
  text-align: center;
  font-size: 40rpx;
  margin-top: 82rpx;
  color: #999;
}
.share {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: #fff;
  background-color: #ff952f;
}