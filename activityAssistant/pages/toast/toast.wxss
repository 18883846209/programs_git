/* pages/toast/toast.wxss */
.toast_content_box {
  position: fixed; 
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: flex-end;   
  z-index: 9999999;
}
.toast_content {
  margin-bottom: 80rpx;
  width: 50%;
  padding: 10rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 40rpx;
  z-index: 99999999;  
}
.toast_content_text {
  width: 100%;
  height: 100%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  z-index: 999999999;  
}